{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "UMD",
    "lib": [
      "ES5",
      "ES6",
      "ES7",
      "DOM",
    ],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/typings",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
  ]
}
